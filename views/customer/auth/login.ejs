<%- include('../../includes/head',{pageTitle: 'Login' }) %>
<link rel="stylesheet" href="/styles/forms.css">    
<link rel="stylesheet" href="/styles/auth.css">    

</head>

    <body>


        <%- include('../../includes/header') %>
            <main>
                <h1>Login To Account</h1>
                <% if (inputData.errorMessage){ %>
                
                    <section class="alert">
                        <h2>Invalid Credentials</h2>
                        <p> <%= inputData.errorMessage  %></p>
                    </section>

                <% } %>
                <form action="/login" method="post">
                    <p>
                        <label for="email">Email</label>
                        <input type="email" name="email" value="<%= inputData.email %>" id="email" required>
                    </p>
                    <input type="hidden" name="_csrf" value="<%= locals.csrfToken%>">
                    
                    <p>
                        <label for="password">password</label>
                        <input type="password" value="<%= inputData.password %>" name="password" id="password" minlength="8" required>
                    </p>
                    <hr>
                    
                    <button class="btn">Login</button>
                    <p id="switch-form"><a href="/signup">Signup</a></p>
                </form>
            </main>

            <%- include('../../includes/footer') %>