<%- include('../../includes/head',{pageTitle: 'signup' }) %>
<link rel="stylesheet" href="/styles/forms.css">    
<link rel="stylesheet" href="/styles/auth.css">    

</head>

    <body>


<%- include('../../includes/header') %>
            <main>
                <h1>Create New Account</h1>
                <% if (inputData.errorMessage){ %>
                
                    <section class="alert">
                        <h2>Invalid Input</h2>
                        <p> <%= inputData.errorMessage  %></p>
                    </section>

                <% } %>

                <form action="/signup" method="post">
                    <p>
                        <label for="email">Email</label>
                        <input type="email" name="email" id="email" value="<%= inputData.email %>" required>
                    </p>
                    <input type="hidden" name="_csrf" value="<%= locals.csrfToken%>">
                    <p>
                        <label for="confirm-email">Confirm Email</label>
                        <input type="email" name="confirm-email" value="<%= inputData.confirmEmail   %>" id="confirm-email" required>
                    </p>
                    <p>
                        <label for="password">password</label>
                        <input type="password" name="password" id="password" autocomplete="on" value="<%= inputData.password %>" minlength="8"  required>
                    </p>
                    <hr>
                    <p>
                        <label for="street">Sterrt</label>
                        <input type="text" value="<%= inputData.street %>" name="street" id="street" required>
                    </p>
                    <p>
                        <label for="postal">Postal Code</label>
                        <input type="text" name="postal" id="postal" value="<%= inputData.postal %>" minlength="5" maxlength="5" required>
                    </p>
                    <p>
                        <label for="city">City</label>
                        <input type="text" name="city" id="city" required value="<%= inputData.city %>">
                    </p>
                    <button class="btn">Create Account</button>
                    <p id="switch-form"><a href="/login"> Login</a></p>
                </form>
            </main>

            <%- include('../../includes/footer') %>